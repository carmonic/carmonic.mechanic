<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    >


        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dialog_background"
            >
            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorYellow"
                android:textStyle="normal"
                android:textSize="20dp"
                />
            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topic"
                    android:id="@+id/txtTitle"
                    style="@style/auth_h1_text"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/circles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/titleLayout"
                android:gravity="center_horizontal"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_text"
                    android:id="@+id/txtNotification"
                    android:textColor="@color/colorPrimaryTextColor"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <!--<view-->
                <!--android:id="@+id/line1"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="3dp"-->
                <!--android:layout_below="@+id/circles"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:background="@color/dialog_text"/>-->


            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_below="@+id/circles"
                android:orientation="horizontal" >

                <TextView

                    android:id="@+id/txtSeeDetail"
                    style="@style/auth_h1_text"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/see_details"
                    android:textColor="@color/dialog_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <!--<view-->
                    <!--android:id="@+id/line2"-->
                    <!--android:layout_width="3dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@color/colorWhite"/>-->


                <TextView

                    android:id="@+id/txtDecline"
                    style="@style/auth_h1_text"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/decline_request"
                    android:textColor="@color/decline_button"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>



        </RelativeLayout>





</LinearLayout>