<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"

    android:orientation="vertical"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_card_layout"
        app:cardBackgroundColor="@color/card_bg"
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        app:cardElevation="3dp">


        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            >
            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorYellow"
                android:textStyle="normal"
                android:textSize="20dp"
                />
            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                >




            </LinearLayout>
            <LinearLayout
                android:id="@+id/circles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/titleLayout"
                android:gravity="center_horizontal"
                >




            </LinearLayout>




            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_below="@+id/circles"
                android:orientation="horizontal" >

                <TextView

                    android:id="@+id/txtSeeDetail"
                    style="@style/auth_h1_text"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/see_details"
                    android:textColor="@color/dialog_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <!--<view-->
                <!--android:id="@+id/line2"-->
                <!--android:layout_width="3dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/colorWhite"/>-->


                <TextView

                    android:id="@+id/txtDecline"
                    style="@style/auth_h1_text"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/decline_request"
                    android:textColor="@color/decline_button"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>